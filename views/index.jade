mixin textbox(placeholder)
  input.textbox(placeholder=placeholder)

doctype html
html(lang+"de")

head
  title= 'git.sockets'
  link(rel='stylesheet', href='/css.css')
  style.
    .switch {
      opacity: 0;
    }

body
  h1 GIT workshop.
  block content
    p Erstellen Sie ein neues GIT Repository, lokal, auf Ihrem Computer!
    +textbox('git _____')

  block switch1
    if data.switch1 = true
      .switch#switch1
        include includes/switch1
    else
      #switch1
        include includes/switch1

//- scripts
script(type='text/javascript', src='/socket.io/socket.io.js')
script(type='text/javascript', src='/script.js')